[Unit]
Description=NOISE SOURCE IOC %p%I
After=rc-local.service
Wants=rc-local.service
After=network-online.target
Wants=network-online.target

[Service]
# Source environment
EnvironmentFile=/etc/sysconfig/noise-src-epics-ioc
EnvironmentFile=/etc/sysconfig/noise-src-epics-ioc-mapping
# Execute pre with root
PermissionsStartOnly=true
Environment=NOISE_SRC_INSTANCE=%i
ExecStartPre=/bin/mkdir -p /var/log/procServ/%p%i
ExecStartPre=/bin/mkdir -p /var/run/procServ/%p%i
WorkingDirectory=<INSTALL_PREFIX>/<IOC_NAME>/iocBoot/iocNoiseSrc
# Run procServ with IOC
ExecStart="/usr/local/bin/runNoiseSrc.sh"

[Install]
WantedBy=multi-user.target
